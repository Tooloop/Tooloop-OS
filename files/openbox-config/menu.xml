<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
    <menu id="root-menu" label="Openbox 3">

        <item icon="/home/tooloop/.config/icons/menu_icon_start_presentation.png" label="Start presentation">
            <action name="Execute">
                <execute>sh /assets/presentation/start-presentation.sh</execute>
            </action>
        </item>

        <separator/>
        
        <menu
            icon="/home/tooloop/.config/icons/menu_icon_settings.png" 
            id="settings-menu" 
            label="Settings"
            execute="/bin/bash /home/tooloop/.config/openbox/settings-menu.sh"
        />

        <menu
            icon="/home/tooloop/.config/icons/menu_icon_tools.png" 
            id="tools-menu" 
            label="Tools">

            <item icon="/home/tooloop/.config/icons/menu_icon_clock.png" label="Clock">
                <action name="Execute">
                    <execute>xclock -digital -strftime &quot;%H:%M:%S&quot; -update 1 -padding 20 -foreground &quot;#e60050&quot; -background black</execute>'
                </action>
            </item>
            <item icon="/home/tooloop/.config/icons/menu_icon_terminal.png" label="Terminal">
                <action name="Execute">
                    <execute>xterm -background grey7</execute>
                </action>
            </item>
            <item icon="/home/tooloop/.config/icons/menu_icon_browser.png" label="Browser">
                <action name="Execute">
                    <execute>chromium-browser</execute>
                </action>
            </item>
            <item icon="/home/tooloop/.config/icons/menu_icon_install.png" label="Install stuff">
                <action name="Execute">
                    <execute>xterm -T &quot;Install stuff&quot; -e sudo tooloop-install-optional-stuff</execute>
                </action>
            </item>
        </menu>

        <separator/>

        <item icon="/home/tooloop/.config/icons/menu_icon_reboot.png" label="Reboot">
            <action name="Execute">
                <execute>sudo reboot --no-wall</execute>
            </action>
        </item>
        <item icon="/home/tooloop/.config/icons/menu_icon_power_off.png" label="Power off">
            <action name="Execute">
                <execute>sudo poweroff --no-wall</execute>
            </action>
        </item>

    </menu>
</openbox_menu>
